# ===================================
#  SERVER CONFIG
# ===================================
PORT=9000
NODE_ENV=development

# ===================================
#  DATABASE CONFIG
# ===================================
DB_NAME=group_ticketing
DB_USER=root
DB_PASS=yourpassword
DB_HOST=localhost
DB_DIALECT=mysql

# ===================================
#  JWT AUTH CONFIG
# ===================================
JWT_SECRET=super_secret_key
JWT_REFRESH_SECRET=refresh_secret_key
JWT_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d

# ===================================
#  EMAIL / SMTP SETTINGS
# ===================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=Group Ticketing System <your_email@gmail.com>

# ===================================
#  AMADEUS API CONFIG
# ===================================
AMADEUS_CLIENT_ID=YOUR_REAL_ID_FROM_AMADEUS
AMADEUS_CLIENT_SECRET=YOUR_REAL_SECRET_FROM_AMADEUS

# ===================================
# CRON / JOB SETTINGS
# ===================================
HOLD_EXPIRY_CRON=*/30 * * * *       # runs every 30 minutes
